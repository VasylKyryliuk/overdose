<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block name="subscribe.popup" template="Overdose_NewsletterPopup::subscribe-popup.phtml" after="-">
                <block class="Magento\Cms\Block\Block" name="subscribe.popup.cms" as="subscribe.popup.cms">
                    <arguments>
                        <argument name="block_id" xsi:type="string">newsletter-popup</argument>
                    </arguments>
                </block>
                <block class="Magento\Newsletter\Block\Subscribe" name="form.subscribe.popup" as="subscribe.popup"
                       template="Overdose_NewsletterPopup::subscribe.phtml" ifconfig="newsletter/general/active"/>
            </block>
        </referenceContainer>
    </body>
</page>
